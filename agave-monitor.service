[Unit]
Description=Agave Monitoring
After=syslog.target network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/agave-monitor
ExecStart=/root/agave-monitor/monitor-env/bin/python3 -u /root/agave-monitor/main.py  --serve-in-foreground
Restart=on-abort

[Install]
WantedBy=multi-user.target